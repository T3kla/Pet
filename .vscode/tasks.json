{
    "tasks": [
        {
            "label": "Build",
            "command": "clang++",
            "type": "shell",
            "args": [
                // "-fdiagnostics-color=always",
                // "-fmax-errors=10",

                "-fcolor-diagnostics",
                "-std=c++17",
                "-static",
                "-m64",

                // "-Wall",
                // "-Wextra",
                // "-Wpedantic",
                "-static",

                // Defines
                "-DGLFW_DLL",
                "-DGLFW_INCLUDE_VULKAN",
                "-DGLM_FORCE_RADIANS",
                "-DGLM_FORCE_DEPTH_ZERO_TO_ONE",

                // Include directories
                "-I",
                "${workspaceFolder}\\inc",
                "-I",
                "C:\\VulkanSDK\\1.3.224.1\\Include",
                "-I",
                "C:\\Users\\segur\\Documents\\Visual Studio 2022\\Libraries\\glm",
                "-I",
                "C:\\Users\\segur\\Documents\\Visual Studio 2022\\Libraries\\glfw-3.3.8.bin.WIN64\\include",

                // Output
                // "-g",
                "${workspaceFolder}\\src\\*.cpp",
                "-o",
                "${workspaceFolder}\\bin\\Pet.exe",

                // Link directories
                "-L",
                "${workspaceFolder}\\lib",
                "-L",
                "C:\\VulkanSDK\\1.3.224.1\\Lib",
                "-L",
                "C:\\Users\\segur\\Documents\\Visual Studio 2022\\Libraries\\glfw-3.3.8.bin.WIN64\\lib-vc2022",

                // Link libraries
                // "-l:vulkan-1.lib",
                "-lglfw3",
                "-lglfw3_mt",
                "-lglfw3dll"

                // Verbose
                // "-v"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
